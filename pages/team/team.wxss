.team_wrap .team_item {
  display: flex;
  background-color: white;
  border: 1px solid #aaaaaa ;
  border-radius: 10px;
  padding: 10rpx;
}
.team_wrap .team_item image{
  flex: 1;
   width: 50%;
   padding: 10rpx;
}
.team_wrap .team_item .text{
  flex: 5;
  display: flex;
  flex-direction: column;
}
.team_wrap .team_item .text text{
  padding: 10rpx;
}
